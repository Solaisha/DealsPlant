<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.solai.dealsplant.MenuActivity">


    <ImageView
        android:layout_width="80sp"
        android:layout_height="50sp"
        app:srcCompat="@drawable/laptop_computer"
        android:id="@+id/imageView2"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Computer Peripherals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:layout_alignBaseline="@+id/textView8"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="80sp"
        android:layout_height="50sp"
        app:srcCompat="@drawable/mobile_phone"
        android:id="@+id/ivMobile"
        android:layout_alignRight="@+id/tvPendrives"
        android:layout_alignEnd="@+id/tvPendrives"
        android:layout_alignParentTop="true" />

    <TextView
        android:text="Mobile Phones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:layout_below="@+id/ivMobile"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Laptop Care"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView13"
        android:layout_below="@+id/ivLaptop"
        android:layout_alignRight="@+id/ivLaptop"
        android:layout_alignEnd="@+id/ivLaptop" />

    <TextView
        android:text="Pendrives"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvPendrives"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:layout_below="@+id/ivPendrive"
        android:layout_alignRight="@+id/ivPendrive"
        android:layout_alignEnd="@+id/ivPendrive" />

    <ImageView
        android:layout_width="80sp"
        android:layout_height="50sp"
        app:srcCompat="@drawable/head_phone_emoji"
        android:id="@+id/ivHeadPhone"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/textView10"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="80sp"
        android:layout_height="50sp"
        app:srcCompat="@drawable/pendrive"
        android:id="@+id/ivPendrive"
        android:layout_above="@+id/textView12"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="80sp"
        android:layout_height="50sp"
        app:srcCompat="@drawable/woman_tech"
        android:id="@+id/ivLaptop"
        android:layout_alignTop="@+id/ivHeadPhone"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Audio Management"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView12"
        android:layout_below="@+id/ivHeadPhone"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="80sp"
        android:layout_height="50sp"
        app:srcCompat="@drawable/headphone"
        android:id="@+id/ivEarPhone"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/textView10"
        android:layout_toStartOf="@+id/textView10" />

    <TextView
        android:text="Ear Phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvEarPhone"
        android:layout_below="@+id/ivEarPhone"
        android:layout_alignLeft="@+id/ivHeadPhone"
        android:layout_alignStart="@+id/ivHeadPhone" />


</RelativeLayout>
